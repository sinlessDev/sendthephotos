{
  "extends": "@tsconfig/vite-react/tsconfig.json",
  "compilerOptions": {
    "module": "nodenext",
    "moduleResolution": "nodenext",
    "types": ["vite/client"],
    "verbatimModuleSyntax": true,
    "paths": {
      "#components/*": ["./src/components/*.ts", "./src/components/*.tsx"],
      "#lib/*": ["./src/lib/*.ts", "./src/lib/*.tsx"],
      "#hooks/*": ["./src/hooks/*.ts", "./src/hooks/*.tsx"]
    }
  }
}
